@model ASP_PV411.Data.Entities.Product

<div class="col">
    <div class="card h-100 position-relative">
        <div class="position-absolute top-0 end-0 m-3 px-3 py-2 bg-secondary bg-opacity-25 rounded-circle text-light"><i class="bi bi-heart"></i></div>
        <a class="nav-link text-dark h-100" asp-action="Product" asp-route-id="@(Model.Slug ?? Model.Id.ToString())">
            <img src="/Storage/Item/@(Model.ImageUrl)" class="card-img-top" alt="@Model.Name">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Descirption</p>
            </div>
            <div class="product-rating" title="Оцінка 4.8 @('\n')Відгуків: 124">★★★★★</div>
        </a>
        <div class="card-footer d-flex justify-content-between align-items-center">
            <span>
                ₴&thinsp;@Model.Price.ToString("F2")
            </span>
            <button type="button" class="btn btn-outline-success shadow-none"><i class="bi bi-cart"></i></button>
        </div>
    </div>
</div>